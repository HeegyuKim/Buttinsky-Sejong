			</sem_grp>
			<frame_grp type="FTR">
				<frame>X=N0-이 Z=N2-로 Y=N1-을 V</frame>
				<subsense>
					<sel_rst arg="X" tht="AGT">인간</sel_rst>
					<sel_rst arg="Y" tht="THM">무게(체중)</sel_rst>
					<sel_rst arg="Z" tht="FNS">무게(60킬로)</sel_rst>
